{
  "name": "task-recorder",
  "version": "1.0.0",
  "description": "Record browser tasks and generate structured documentation with Instructions and Know-How",
  "private": true,
  "scripts": {
    "dev:backend": "pnpm --filter task-recorder-backend dev",
    "build:backend": "pnpm --filter task-recorder-backend build",
    "build:extension": "pnpm --filter task-recorder-extension build",
    "build": "pnpm build:backend && pnpm build:extension",
    "clean": "pnpm --filter '*' clean"
  },
  "devDependencies": {
    "typescript": "^5.3.0"
  }
}

